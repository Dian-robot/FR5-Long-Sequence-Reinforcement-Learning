<?xml version="1.0"?>
<robot name="coffeemachine_side_new">

  <!-- 清爽材质 -->
  <material name="white"><color rgba="0.97 0.97 0.97 1"/></material>
  <material name="tank"><color rgba="0.82 0.92 1.0 0.55"/></material>
  <material name="steel"><color rgba="0.95 0.95 0.95 1"/></material>
  <material name="tray"><color rgba="0.75 0.75 0.75 1"/></material>
  <material name="top_plate"><color rgba="0.90 0.90 0.90 1"/></material>

  <!-- 1. 主机身（窄版） -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.19"/>
      <geometry><box size="0.30 0.18 0.38"/></geometry>
      <material name="white"/>
    </visual>
    <collision><origin xyz="0 0 0.19"/><geometry><box size="0.30 0.18 0.38"/></geometry></collision>
    <inertial>
      <mass value="4.0"/>
      <inertia ixx="0.08" ixy="0" ixz="0" iyy="0.06" iyz="0" izz="0.07"/>
    </inertial>
  </link>

  <!-- 2. 透明水箱 -->
  <link name="water_tank">
    <visual>
      <origin xyz="0 0 0.39"/>
      <geometry><box size="0.26 0.16 0.07"/></geometry>
      <material name="tank"/>
    </visual>
    <collision><origin xyz="0 0 0.39"/><geometry><box size="0.26 0.16 0.07"/></geometry></collision>
    <inertial><mass value="0.3"/><inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/></inertial>
  </link>

  <!-- 3. 顶部接水板 -->
  <link name="top_plate">
    <visual>
      <origin xyz="0.08 0 0.435"/>
      <geometry><box size="0.16 0.18 0.015"/></geometry>
      <material name="top_plate"/>
    </visual>
    <collision><origin xyz="0.08 0 0.435"/><geometry><box size="0.16 0.18 0.015"/></geometry></collision>
    <inertial><mass value="0.2"/><inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0" izz="1e-4"/></inertial>
  </link>

  <!-- 4. 出水嘴（加长并前移） -->
  <link name="nozzle">
    <visual>
      <origin xyz="0.16 0 0.165"/>
      <geometry><cylinder radius="0.010" length="0.06"/></geometry>
      <material name="steel"/>
    </visual>
    <collision><origin xyz="0.16 0 0.165"/><geometry><cylinder radius="0.010" length="0.06"/></geometry></collision>
    <inertial><mass value="0.05"/><inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/></inertial>
  </link>

  <!-- 5. 前伸接水盘 -->
  <link name="drip_tray">
    <visual>
      <origin xyz="0.155 0 0.032"/>
      <geometry><box size="0.22 0.18 0.025"/></geometry>
      <material name="tray"/>
    </visual>
    <collision><origin xyz="0.155 0 0.032"/><geometry><box size="0.22 0.18 0.025"/></geometry></collision>
    <inertial><mass value="0.5"/><inertia ixx="2e-3" ixy="0" ixz="0" iyy="2e-3" iyz="0" izz="2e-3"/></inertial>
  </link>

  <!-- 固定关节 -->
  <joint name="j_tank"   type="fixed"><parent link="base_link"/><child link="water_tank"/></joint>
  <joint name="j_plate"  type="fixed"><parent link="base_link"/><child link="top_plate"/></joint>
  <joint name="j_nozzle" type="fixed"><parent link="base_link"/><child link="nozzle"/></joint>
  <joint name="j_tray"   type="fixed"><parent link="base_link"/><child link="drip_tray"/></joint>

</robot>